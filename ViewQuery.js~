var mongoose = require('mongoose');
var ViewQuery = mongoose.model('ViewQuery', { 
    viewname: String,
    sparql: String,
    jsonscema: Object,
    endpoing: String
});
var fs = require('fs');

module.exports = {
    readFile: function(filepath, callback){
        fs.readFile(filepath, 'utf8', function(err, data){
            if (err) { throw err; }
            JSON.parse(data);
            callback(null, new ViewQuery(data));
        });        
    }
};
